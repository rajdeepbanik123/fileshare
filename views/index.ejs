<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
     <!-- <link rel="stylesheet" href="/public/stylesheets/style.css">  -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
  <div class="container">
      <% if (locals.fileLink != null) { %>
          <div id="fileupload">
              Your file is uploaded:
              <span id="fileLink"><%= locals.fileLink %></span>
              <button class="click" onclick="copyLink()"><i class="fas fa-clone"></i></button>
          </div>
      <% } %>
      <form action="/upload" method="post" enctype="multipart/form-data">
          <label for="file">File:</label>
          <input type="file" id="file" name="file" required />
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" />
          <button type="submit">Share</button>
          <button class="home" type="button" onclick="window.location.href='/'">Home</button>

      </form>
  </div>

  <script>
      function copyLink() {
          const linkElement = document.getElementById("fileLink");
          const linkText = linkElement.textContent;
          navigator.clipboard.writeText(linkText)
              .then(() => {
                  
              })
              .catch((error) => {
                  console.error("Error copying link:", error);
              });
      }
  </script>
</body>

</html>

